---
import Layout from '../layouts/Layout.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';
import ContactForm from '../components/ContactForm.astro';

import { Image } from '@astrojs/image/components';

---

<BaseLayout>
	<section id="intro" class="introduction-hero">
		<div class="introduction-text">
			<p class="name">Hi, my name is <span>Austin Johnson</span></p>
		
			<div class="introduction-description-text">
				<h2>I build Front End <br> Web Applications</h2>
			
				<p>
					I'm a developer specializing in
					<br>
					Angular, Typescript, HTML, CSS, ASP.NET and C#.
				</p>
			
				<p>Currently, I'm working at <a href="https://www.swissre.com/" target="_blank ">SwissRe Inc.</a></p>
			</div>
		</div>
		<Image src="/profile.jpg"
			class="border-radius"
			width={300}
			height={450}
			format="png"
			alt="A rocket blasting off."
		/>
	</section>
	
	<div class="skills">
		skills section
	</div>
	<ContactForm></ContactForm>
</BaseLayout>


<style>
#intro {
  padding-bottom: 10rem;
	@media((max-width:50em)) {
		padding-bottom: 25rem;
	}
}

#intro p {
  font-size: 1rem;
  line-height: 1.5;
}

#intro .name {
  font-family: var(--mono);
}

.name span {
  font-family: var(--sans);
  font-size: 3rem;
  color: var(--nord7);
  display: block;
}

#intro h2 {
  font-size: 3rem;
  font-weight: normal;
}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;

		@media (max-width:40em) {
			font-size: 2rem;
		}
	}

	.introduction-hero {
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		gap: 2rem;
		padding: 2rem;
	}
	
	.introduction-text {
		margin-right: 3rem;
		text-wrap: balance;

		@media (max-width:50em) {
			position: absolute;
			top: 40%;
			color: white;
			font-size: 0.9rem;
			text-align:center;
			margin-right: 0;
			z-index: 1;
		}
	}

	.introduction-description-text {
		@media (max-width:50em) {
			margin-top: 15rem;
		}
	}

	.border-radius { 
		border-radius: 10px;
	}
</style>
